{
  "name": "phonebook-api",
  "version": "1.0.0",
  "description": "Express PhoneBook API",
  "author": "ChuntheQhai (Abel)",
  "scripts": {
    "client": "cd app && npm start",
    "build": "cd app && npm install && npm run build-prod",
    "server": "node server/esm",
    "start": "concurrently \"npm run server\" \"npm run client\""
  },
  "heroku-run-build-script": true,
  "proxy": {
    "/api/*": {
      "target": "http://localhost:3000"
    }
  },
  "dependencies": {
    "body-parser": "^1.18.2",
    "cors": "^2.8.5",
    "esm": "^3.2.25",
    "express": "^4.16.1",
    "mongodb": "^3.5.9",
    "morgan": "^1.9.0",
    "node-fetch": "^2.0.0",
    "react-phone-input-2": "^2.13.7",
    "dotenv": "^5.0.0"
  },
  "devDependencies": {
    "concurrently": "^3.5.0",
    "nodemon": "^2.0.4"
  }
}
